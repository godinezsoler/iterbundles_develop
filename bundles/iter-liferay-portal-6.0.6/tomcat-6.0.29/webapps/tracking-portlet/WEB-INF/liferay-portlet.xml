<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>ranking-viewer-portlet</portlet-name>
		<icon>/icon.png</icon>
		<friendly-url-mapper-class>com.protecmedia.iter.tracking.util.TrackingFriendlyURLMapper</friendly-url-mapper-class>
		<!-- <friendly-url-mapping>content</friendly-url-mapping> -->
		<friendly-url-routes>tracking-portlet-friendly-url-routes.xml</friendly-url-routes>
		<layout-cacheable>false</layout-cacheable>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/ranking-viewer.css</header-portlet-css>
		<css-class-wrapper>ranking-viewer-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>content-tools-portlet</portlet-name>
		<icon>/icon.png</icon>
		<layout-cacheable>false</layout-cacheable>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/content-tools.css</header-portlet-css>
		<css-class-wrapper>content-tools-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>content-social-portlet</portlet-name>
		<icon>/icon.png</icon>
		<layout-cacheable>false</layout-cacheable>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/content-social.css</header-portlet-css>
		<css-class-wrapper>content-social-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>content-ratings-portlet</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>com.protecmedia.iter.tracking.action.ContentRatingsAction</configuration-action-class>
		<!-- <friendly-url-mapping>content</friendly-url-mapping> -->
		<layout-cacheable>false</layout-cacheable>
		<instanceable>true</instanceable>
		<header-portlet-css>/css/content-ratings.css</header-portlet-css>
		<css-class-wrapper>content-ratings-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>tracking-portlet</portlet-name>
		<icon>/icon.png</icon>
		<control-panel-entry-category>content</control-panel-entry-category>
		<control-panel-entry-weight>3.5</control-panel-entry-weight>
		<header-portlet-css>/css/tracking.css</header-portlet-css>
		<css-class-wrapper>tracking-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>user-feedback-portlet</portlet-name>
		<icon>/icon.png</icon>
		<layout-cacheable>false</layout-cacheable>
		<instanceable>true</instanceable>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>